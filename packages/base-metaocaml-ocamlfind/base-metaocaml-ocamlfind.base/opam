opam-version: "1.2"
maintainer: "yallop@gmail.com"
install: [
  ["mkdir" "-p" "%{lib}%/findlib.conf.d/"] {ocamlfind:installed}
  ["cp" "metaocaml.conf" "%{lib}%/findlib.conf.d/"] {ocamlfind:installed}
]
remove: ["rm" "-f" "%{lib}%/findlib.conf.d/metaocaml.conf"]
depends: "ocaml"
depopts: "ocamlfind"
