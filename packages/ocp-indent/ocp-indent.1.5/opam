  "ocaml"
  "ocp-build" {>= "1.99.6-beta"}
  "cmdliner"
]
post-messages: [
  "
To use from emacs, add the following to your .emacs:
  (add-to-list 'load-path \"%{share}%/emacs/site-lisp\")
  (require 'ocp-indent)

To use from Vim, add to your .vimrc:
  execute \":source \" . \"%{share}%/vim/syntax/ocp-indent.vim\"
  "
    {success}
]
