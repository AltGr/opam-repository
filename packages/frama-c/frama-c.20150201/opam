build: [
  ["./configure" "--prefix" prefix]
  [make]
  [make "install"]
]
build-test: [make "PTESTS_OPTS=-error-code" "tests"]
build-doc: [
  [make "-C" "doc" "download"]
  [make "-C" "doc" "FRAMAC_DOCDIR=%{frama-c:doc}%" "install"]
]
remove: [
  ["./configure" "--prefix" prefix]
  [make "uninstall"]
  ["rm" "-rf" frama-c:doc]
]
